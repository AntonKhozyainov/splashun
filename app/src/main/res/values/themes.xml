<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Splashun" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarStyle">
        <item name="iconTint">@color/black</item>
        <item name="android:background">@color/green</item>
        <item name="titleTextColor">@color/black</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="IconPhotoDetailStyle">
        <item name="tint">@color/black</item>
    </style>

    <style name="AuthorFullNamePhotoDetailTextStyle">
        <item name="fontWeight">700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">16.23sp</item>
    </style>

    <style name="AuthorNamePhotoDetailTextStyle">
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="lineHeight">12.89sp</item>
    </style>

    <style name="LikesCountPhotoDetailTextStyle">
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">12.89sp</item>
    </style>


    <style name="AuthorFullNameTextStyle">
        <item name="fontWeight">700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="lineHeight">16.23sp</item>
    </style>


    <style name="ProgressBarStyle">
        <item name="android:indeterminateTint">@color/black</item>
    </style>

    <style name="PhotoDetailTextStyle">
        <item name="fontWeight">300</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">18.05sp</item>
    </style>

    <style name="AuthorNameTextStyle">
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">9sp</item>
        <item name="lineHeight">12.89sp</item>
    </style>

    <style name="LikesCountTextStyle">
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">12.89sp</item>
    </style>

    <style name="DescriptionOnBoardingCaption">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="textException" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">16dp</item>
        <item name="lineHeight">16.41sp</item>
        <item name="fontWeight">700</item>
    </style>

</resources>